<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LenguajesIV_ProjectoFinal.Views.MarcarEnElMapa"
              Background="#F5E1C9">
    <ContentPage.Content>
        <StackLayout Padding="25" HorizontalOptions="FillAndExpand">
            <Label Text="Marcar Ubicacion en el Mapa" HorizontalOptions="Center" VerticalOptions="Start" FontSize="Medium" FontAttributes="Bold"></Label>
            <!--#region El mapa-->
            <!--#endregion-->
            <Button Text="Obtener Ubicacion Actual" Margin="0,20,0,0" Clicked="ObtenerUbicacion"  ></Button>
            
                <Entry IsEnabled="False" x:Name="txtLat" Margin="0,20,0,0"></Entry>
                <Entry IsEnabled="False" x:Name="txtLong" Margin="0,20,0,0" ></Entry>

            <Grid>
                <Button Text="Atras" HorizontalOptions="Start" Clicked="Atras"  Margin="0,20,0,0"></Button>
                <Button Text="Confirmar" HorizontalOptions="End" Clicked="GrabarMulta" Margin="0,20,0,0"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>