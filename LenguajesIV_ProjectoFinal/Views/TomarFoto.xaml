<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LenguajesIV_ProjectoFinal.Views.TomarFoto">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tomar foto de Documento de Identificacion" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Medium" FontAttributes="Bold"></Label>
            <Button Text="Abrir Camara" Margin="0,20,0,0" Clicked="Capturar"  ></Button>

            <Grid>
                <Button Text="Atras" HorizontalOptions="Start" Clicked="Atras"  Margin="0,20,0,0"></Button>
                <Button Text="Siguiente" HorizontalOptions="End" Clicked="Siguiente"  Margin="0,20,0,0"></Button>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>